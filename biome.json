{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["dist/**/*"],
		"rules": {
			"all": true
		}
	},
	"formatter": {
		"ignore": ["dist/**/*"],
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": false,
			"indentStyle": "tab",
			"indentWidth": 2,
			"quoteStyle": "single"
		}
	}
}
