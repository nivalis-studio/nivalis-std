{
  "name": "@nivalis/std",
  "type": "module",
  "version": "3.0.0-beta.1",
  "description": "Set of utilities used in Nivalis projects",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "packageManager": "bun@1.2.13",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      }
    }
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "test": "bun test",
    "build": "unbuild",
    "prepublishOnly": "unbuild",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "prepare": "bunx lefthook install",
    "ts": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nivalis/eslint-config": "5.1.11",
    "@nivalis/prettier-config": "3.5.3",
    "@types/bun": "latest",
    "eslint": "9.27.0",
    "lefthook": "1.11.13",
    "lint-staged": "16.0.0",
    "prettier": "3.5.3",
    "unbuild": "3.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "homepage": "https://github.com/nivalis-studio/nivalis-std#readme",
  "repository": {
    "url": "git+https://github.com/nivalis-studio/nivalis-std.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/nivalis-std/issues"
  },
  "prettier": "@nivalis/prettier-config",
  "lint-staged": {
    "*": "eslint --fix --quiet"
  },
  "unbuild": {
    "declaration": true,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  }
}
