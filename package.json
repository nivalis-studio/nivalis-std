{
	"name": "@nivalis/std",
	"version": "0.6.2",
	"type": "module",
	"description": "Set of utilities used in Nivalis projects",
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"README.md",
		"LICENSE",
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"test": "exit 0",
		"build": "unbuild",
		"prepublishOnly": "unbuild",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"ts": "tsc",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.4.1",
		"@types/bun": "latest",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"unbuild": "^2.0.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"lint-staged": {
		"*": "biome check --apply"
	},
	"unbuild": {
		"declaration": true,
		"exports": "named",
		"preserveModules": true,
		"sourcemap": true
	},
	"license": "MIT",
	"homepage": "https://github.com/nivalis-studio/nivalis-std#readme",
	"bugs": {
		"url": "https://github.com/nivalis-studio/nivalis-std/issues"
	},
	"repository": {
		"url": "git+https://github.com/nivalis-studio/nivalis-std.git"
	}
}
