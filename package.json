{
	"name": "@nivalis/std",
	"type": "module",
	"version": "3.0.0-beta.1",
	"description": "Set of utilities",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"homepage": "https://github.com/nivalis-studio/nivalis-std#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nivalis-studio/nivalis-std.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/nivalis-std/issues"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"sideEffects": false,
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": ["LICENSE", "README.md", "dist"],
	"engines": {
		"node": ">=17.0.0"
	},
	"scripts": {
		"test": "bun test",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"ts": "tsc",
		"build": "tsdown",
		"prepack": "tsdown",
		"prepare": "bunx lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@nivalis/biome-config": "0.1.3",
		"@types/bun": "1.2.1",
		"lefthook": "1.13.0",
		"tsdown": "0.14.2",
		"typescript": "^5.0.0",
		"vitest": "3.2.4"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"unbuild": {
		"declaration": true,
		"exports": "named",
		"preserveModules": true,
		"sourcemap": true
	}
}
