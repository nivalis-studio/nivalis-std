{
  "name": "@nivalis/std",
  "type": "module",
  "version": "3.0.0-beta.1",
  "description": "Set of utilities",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/nivalis-std#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/nivalis-std.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/nivalis-std/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=17.0.0"
  },
  "scripts": {
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "ts": "tsc",
    "build": "tsdown",
    "prepack": "tsdown",
    "prepare": "bunx lefthook install"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nivalis/eslint-config": "5.0.2",
    "@nivalis/prettier-config": "3.5.2",
    "@types/bun": "1.2.1",
    "lefthook": "1.13.0",
    "eslint": "9.21.0",
    "prettier": "3.5.3",
    "tsdown": "0.14.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "prettier": "@nivalis/prettier-config",
  "unbuild": {
    "declaration": true,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  }
}
